[Unit]
Description=Zen Protocol
After=network.target

[Service]
Type=simple
WorkingDirectory=/usr/lib/node_modules/@bdl/zen-node-yesod/Release/
ExecStart=/usr/bin/mono /usr/lib/node_modules/@bdl/zen-node-yesod/Release/zen-node.exe --data-path /var/zenprotocol/
Restart=on-failure

[Install]
WantedBy=multi-user.target